generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// ─── NextAuth required models ─────────────────────────────────────────────────

model User {
  id            String     @id @default(cuid())
  name          String?
  email         String     @unique
  emailVerified DateTime?
  image         String?
  username      String?    @unique
  bio           String?
  passwordHash  String?
  isAdmin       Boolean    @default(false)

  accounts      Account[]
  sessions      Session[]
  userAlbums    UserAlbum[]
  activities    Activity[]

  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt

  @@index([username])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ─── App models ────────────────────────────────────────────────────────────────

model Album {
  // Canonical shared metadata — one record per unique album (deduped by spotifyId)
  id            String  @id @default(cuid())
  spotifyId     String? @unique
  title         String
  artist        String
  coverUrl      String?
  releaseYear   Int?
  spotifyGenres String[]
  trackCount    Int?
  durationMs    Int?
  tracks        Json?
  dominantColor String?
  paletteColors String[]

  userAlbums    UserAlbum[]
  activities    Activity[]

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([artist])
}

model UserAlbum {
  // Each user's personal review + ranking of an album
  id             String    @id @default(cuid())
  userId         String
  albumId        String

  user           User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  album          Album     @relation(fields: [albumId], references: [id], onDelete: Cascade)

  // Personal ranking — position in the user's ordered list (1 = top)
  rank           Int?
  // Optional personal score 0–10 (does NOT affect global ranking)
  score          Float?
  // Status
  status         String    @default("reviewed") // reviewed | listening | archived

  // Review content
  shortBlurb     String?
  review         String?   @db.Text
  listenDate     DateTime?
  moodTags       String[]
  userGenreTags  String[]
  favoriteTracks String[]
  similarAlbums  String[]  // Album IDs

  relistens      Relisten[]

  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  @@unique([userId, albumId])
  @@index([userId])
  @@index([userId, rank])
  @@index([albumId])
}

model Relisten {
  id          String    @id @default(cuid())
  userAlbumId String
  userAlbum   UserAlbum @relation(fields: [userAlbumId], references: [id], onDelete: Cascade)
  date        DateTime
  notes       String?
  createdAt   DateTime  @default(now())
}

model Activity {
  // Social feed events
  id        String   @id @default(cuid())
  userId    String
  albumId   String
  type      String   // "reviewed" | "ranked" | "score_updated" | "reranked"
  data      Json?    // { score, rank, prevRank, blurb }

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  album     Album    @relation(fields: [albumId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@index([createdAt])
  @@index([userId])
}
